<div class="container my-5" style="border-color: black" id="CardBody">
    <link rel="stylesheet" href="{{ asset('assets/CSS/PostCard.css') }}">
    <div class="card mx-auto" id="PopupCard" style="border-radius: 20px">
        <div class="row no-gutters cardbody">
            <div class="col-md-8" id="ImgHolder">
                <img id="image" src="{{ asset('assets/Images/' ~ post.Image) }}" class="card-img" alt="..."
                style="">
            </div>
            <div class="col-md-4 position-relative">
                <div class="card-body d-flex flex-column" id="RSide">
                    <div>
                        <h6 class="card-title fw-bold" style="display: inline">{{ post.title }}</h6>
                        {% if post.owner == app.user %}
                            <a href="{{ path('manage.Post',{'id': post.id}) }}">
                                <i class="fa-solid fa-pen-to-square" style="color: rgba(0, 97, 149, 0.9); margin-left: 95%; "></i>
                            </a>
                        {% endif %}
                        <img id="avatar" src="{{ asset('assets/Images/' ~ post.owner.image) }}" alt="Small Image">
                        <p class="fw-bold" style="display: inline;margin-right: 3px">{{ post.owner.username }}</p>
                        <h6 class="fw-light" style="display: inline;font-size: 11px;color:gray">{{ post.createdAt|date('d-m-Y') }}</h6>
                    </div>
                    <p class="Bio custom-scrollbar">{{ post.description }}</p>
                    <div class="mb-2">
                        <i class="fa-solid fa-location-dot" style="color: rgba(0, 97, 149, 0.9);"></i>
                        <p class="fw-light" style="display: inline;font-size: 11px;color:gray">{{ post.location }}</p>
                    </div>
                    <hr/>
                    <div class="comments mb-4 mt-auto CommentSectionContainer">
                        <ul class="list-group list-group-flush CommentSection" postid="{{ post.id}}" index="0">
                            <li class="fw-bold LoadMarker">load more..</li>
                        </ul>
                    </div>

                    <div>
                        <button postid="{{ post.id }}" class="btn btn-sm btn-square pull-right LikeBtn"
                                style="display: inline;border-radius: 0;background-repeat: no-repeat;background-position: center;background-size: 60%;">
                        </button>
                        <span style="display: inline;" postid="{{ post.id }}" class="LikeCounter">{{ post.likes.count }} likes</span>
                    </div>
                    <hr/>
                    <div class="input-group mb-1" id="commentHolder">
                        <input type="text" class="form-control CommentArea" placeholder="Add a comment..." postid="{{ post.id}}" >
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary Commentbtn" type="button" postid="{{ post.id}}">Send</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
