{% extends 'index.html.twig' %}

{% block title %}Password Reset Email Sent{% endblock %}

{% block AddCSSLinks %}
    <link rel="stylesheet" href="{{ asset('assets/css/login.css') }}">
    <link
            rel="stylesheet"
            href="https://unicons.iconscout.com/release/v4.0.0/css/line.css"
    />

{% endblock %}

{% block SectionsOfTheBody %}
<div class="container">
    <div class="form">
        <a href= "{{ path('app_login') }}" class="back">&times;</a>
        <span class="title">Password Reset Email Sent</span>

        <p>
            <br />
            If an account matching your email exists, then an email was just sent that contains a link that you can use to reset your password.
            This link will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
        </p>
        <p>
            If you don't receive an email please check your spam folder or <a href="{{ path('app_forgot_password_request') }}" style="font-size: small">try again</a>.
        </p>
    </div>
</div>

{% endblock %}
{% block Footer %}
{% endblock %}